<h1>Kayıt Ol</h1>
<%= form_with model: @user, url: signup_path, local: true, class: "needs-validation", novalidate: true do |f| %>
  <div class="mb-3">
    <%= f.label :username, "Kullanıcı Adı", class: "form-label" %>
    <%= f.text_field :username, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :email, "E-posta", class: "form-label" %>
    <%= f.email_field :email, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :password, "Şifre", class: "form-label" %>
    <%= f.password_field :password, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "Şifre (Tekrar)", class: "form-label" %>
    <%= f.password_field :password_confirmation, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.submit "Kayıt Ol", class: "btn btn-primary" %>
  </div>
<% end %>