<div class="edit-profile-container">
  <h1>Profili Düzenle</h1>

  <%= form_for(@user, url: profile_path) do |f| %>
    <div class="form-group">
      <%= f.label :first_name, 'Ad' %>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :last_name, 'Soyad' %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :age, 'Yaş' %>
      <%= f.number_field :age, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :gender, 'Cinsiyet' %>
      <%= f.select :gender, [['Erkek', 'male'], ['Kadın', 'female'], ['Diğer', 'other']], { include_blank: true }, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :interests, 'Bölümü' %>
      <%= f.select :interests, ['Bilgisayar Mühendisliği', 'Sağlık'], { include_blank: true }, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :about, 'Hakkında' %>
      <%= f.text_area :about, class: 'form-control', rows: 4 %>
    </div>
    <div class="form-group">
      <%= f.label :twitter, 'Twitter' %>
      <%= f.url_field :twitter, class: 'form-control', placeholder: 'Twitter Profil Linki' %>
    </div>
    <div class="form-group">
      <%= f.label :linkedin, 'LinkedIn' %>
      <%= f.url_field :linkedin, class: 'form-control', placeholder: 'LinkedIn Profil Linki' %>
    </div>
    <%= f.submit 'Kaydet', class: 'btn btn-success' %>
  <% end %>

  <%= link_to 'Geri Dön', profile_path, class: 'btn btn-secondary' %>
</div>