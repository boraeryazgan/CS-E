<h1 class="mb-4">Profil Düzenle</h1>

<%= form_with model: @profile, url: profile_path, method: :patch, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :bio, "Biyografi", class: "form-label" %>
    <%= f.text_area :bio, class: "form-control", rows: 4 %>
  </div>

  <div class="mb-3">
    <%= f.label :location, "Konum", class: "form-label" %>
    <%= f.text_field :location, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :age, "Yaş", class: "form-label" %>
    <%= f.number_field :age, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :gender, "Cinsiyet", class: "form-label" %>
    <%= f.select :gender, ["Erkek", "Kadın", "Diğer"], prompt: "Seçin", class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :interests, "İlgi Alanları", class: "form-label" %>
    <%= f.text_area :interests, class: "form-control", rows: 4 %>
  </div>

  <div class="mb-3">
    <%= f.submit "Güncelle", class: "btn btn-primary" %>
  </div>
<% end %>