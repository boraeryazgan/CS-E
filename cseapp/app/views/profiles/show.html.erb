<div class="profile-container container mt-5">
  <h1 class="mb-4"><%= @profile.user.username %>'s Profile</h1>

  <div class="row">
    <div class="col-md-4 mb-3">
      <img src="https://avatars.githubusercontent.com/u/92815050?v=4" class="img-fluid rounded-circle" alt="<%= @profile.user.username %>'s Avatar">
    </div>
    <div class="col-md-8">
      <p><strong>Biography:</strong> <%= @profile.bio.presence || "No biography added yet." %></p>
      <p><strong>Location:</strong> <%= @profile.location.presence || "Location not provided." %></p>
      <p><strong>Age:</strong> <%= @profile.age.presence || "Age not specified." %></p>
      <p><strong>Gender:</strong> <%= @profile.gender.presence || "Gender not specified." %></p>

      <div class="mt-3">
        <%= link_to "Edit Profile", edit_profile_path, class: "btn btn-primary me-2" %>
        <%= link_to "Settings", settings_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>